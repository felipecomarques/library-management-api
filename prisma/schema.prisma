// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// npx prisma generate
model Librarian {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  password String
  email    String @unique
}

model Client {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  password String
  email    String @unique
}

model Book {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  title               String
  author              String
  published           DateTime
  isbn                String   @unique
  deweyClassification Int      @unique
  CutterSanborn       String
  pages               Int
  quantity            Int
}
